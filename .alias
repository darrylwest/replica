alias clean='/bin/rm -fr build'

alias config='cmake -S . -B build'

alias mktest='./build/test/replica_unit_tests --durations yes'

mk_func() {
    [ -d build ] || config

    cmake --build build && ./build/test/replica_unit_tests --durations yes
}

alias mk='mk_func'

alias mkrun='./build/replica -i 500 -s src,include,test -e .hpp,.cpp -x 'cxxopts.hpp,fmt/,catch.hpp' --cmd "cmake --build build"'
